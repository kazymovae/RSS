<p id="notice"><%= notice %></p>

<h1>Listing Feeds</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Link</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @feeds.each do |feed| %>
      <tr>
        <td><%= link_to feed.title, feed_items_path(feed)%></td>
        <td><%= feed.description %></td>
        <td><%= feed.link %></td>
        <td><%= button_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= button_to 'Destroy', feed, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_feed_path %>


</div>