<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= strip_tags(item.description) %></td>
        <td><%= item.link %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% @feed.items.each do |item| %>
    <%= item.title %>
    <%= strip_tags(item.description) %>
    <%= link_to item.link, item.link %>
    <br><br>
<% end %>