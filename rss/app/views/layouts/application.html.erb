<!DOCTYPE html>
<html>
<head>
  <title>Rss</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="page">
    <div id="header">
    <% if current_page?(feeds_path()) || @feed.title.blank? %>
    	    <h1>RSS</h1>
    	<% else %>
    	    <h1><%= @feed.title %></h1>
    	<% end %>
    </div>
<div id="main">
<%= yield %>
</div>
</div>
</body>
</html>
